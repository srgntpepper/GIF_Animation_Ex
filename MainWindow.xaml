<Window x:Class="GIF_Animation_Ex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIF_Animation_Ex"
        mc:Ignorable="d"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="MainWindow" Height="500" Width="500" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Image x:Name="LittlePot" gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimatedSource="LittlePot.gif" Height="500" Margin="0,0,0,0" VerticalAlignment="Top" Source="/LittlePot.gif" MouseDown="LittlePot_MouseDown"/>
</Window>
